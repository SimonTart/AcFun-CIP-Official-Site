.button
    cursor pointer
    box-sizing border-box

    > button
        width 100%
        height 100%
        border none
        padding 0
        outline none
        background transparent
        cursor pointer
        color #fff

    &.shrink
        display inline-block

    &.large
        height 40px
        line-height 40px

        &.shrink
            padding 0 16px

        > button
            font-size 16px


    &.primary
        background #FD4C5B

        &:hover
            background #FF2235

    &.secondary
        background #FFA927
        color #fff

        &:hover
            background #ff9a00

    &.disabled
        background #EEEEEE
        cursor not-allowed

        > button
            color #CCCCCC
            cursor not-allowed


