:host
    width 100%
    height 100%
    outline none
    padding 0 12px
    font-size 14px
    box-sizing border-box
    color #333
    border 1px solid #ccc

    &::placeholder
        color #ccc

    &:hover
        border-color #aaa

    &:focus
        border-color #333

:host-context(.large)
    height 40px
    line-height 40px


:host-context(.ng-invalid)
    border-color #FF0015
    &::placeholder
        color #ccc

