.container
    height 100vh
    display flex
    justify-content center
    align-items center
    flex-wrap wrap

.search-block
    width 670px

    .search-box
        display flex

        .user-id-input
            width 540px
            margin-right 10px

    .search-tip
        margin-top 10px

        > a
            font-size 12px
            color #FFFFFF
            text-decoration none

            &:hover
                text-decoration underline

.search-result
    width 100%
    margin-top 42px
    display flex
    justify-content center

.search-result-content
    width 670px

    .result-info
        font-size 16px
        color #FFFFFF

.content-item
    margin-top 8px

    &-header
        background #fff
        height 38px
        padding 0 16px
        display flex
        align-items center
        font-size 14px
        color #333333
        overflow hidden
        cursor pointer

        &-title
            flex 1 1 0
            overflow hidden
            text-overflow ellipsis
            white-space nowrap

        .arrow-icon
            flex 0 0 auto
            margin-left 16px

